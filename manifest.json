{
  "manifest_version": 2,

  "name": "Block urls",
  "description": "This extension allows you to block urls",
  "version": "1.0",

  "icons": {
    "16": "block16.png",
    "24": "block24.png",
    "32": "block32.png",
    "48": "block48.png",
    "128": "block128.png"
  },

  "background": {
    "persistent": true,
    "scripts": ["background.js"]
  },

  "options_page": "options.html",

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*/*",
    "storage",
    "contextMenus",
    "activeTab"
  ]
}